//Assignment #3
var filterTimeCode = function(timeInSeconds){
    var mins = parseFloat(Math.floor(timeInSeconds/60));
    var secs = parseFloat(Math.floor(timeInSeconds - mins * 60));

    var minSec = mins + ':' + secs;

    return minSec

}
